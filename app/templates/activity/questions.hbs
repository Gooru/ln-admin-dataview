<div class="activity-questions">
  <div class="question-cards">
    {{#each questions as |question|}}
      {{activity.question-card question=question getQuestionInfo='getQuestionInfo'}}
    {{/each}}
  </div>


  {{#app-pull-out showPullOut=showPullOut title=question.title description=question.taxonomy.id showMore=showMore isLoading=isLoading as |section|}}
    {{#if (and section.isLessContent question.title)}}
      {{activities.pull-out-body
       collection=question
       isLoading=isLoading
     }} {{else if section.isMoreContent}} {{activities.pull-out-more-content groupData=groupData groupHeader=questionHeader type="resource" }}
    {{/if}}
  {{/app-pull-out}}
</div>
