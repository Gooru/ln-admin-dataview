<div class="activity-resources">
  <div class="resource-cards">
    {{#each resources as |resource|}}
      {{activity.resource-card resource=resource getResourceInfo='getResourceInfo'}}
    {{/each}}
  </div>
  
  {{#app-pull-out showPullOut=showPullOut title=collection.title description=collection.taxonomy.id showMore=showMore isLoading=isLoading as |section|}}
    {{#if (and section.isLessContent collection.title)}}
      {{activities.pull-out-body
       collection=collection
       isLoading=isLoading
     }} {{else if section.isMoreContent}} {{activities.pull-out-more-content groupData=groupData groupHeader=groupHeader type="resource" }}
    {{/if}}
  {{/app-pull-out}}
</div>
