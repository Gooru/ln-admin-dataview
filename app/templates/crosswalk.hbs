<div class="crosswalk">
  <header class="crosswalk-header">
    <div class="navigator">
      {{#link-to 'gcm'}}{{t 'crosswalk.switch_to_gcm'}}{{/link-to}}
    </div>
    <div class="title">
        {{t "crosswalk.title"}}
    </div>
  </header>
  <div class="crosswalk-body">
    <div class="subect-browser">
      <div class="section-title">
        <span class="title">{{t 'crosswalk.browser-level.category'}}, </span>
        <span class="title">{{t 'crosswalk.browser-level.subject'}}, </span>
        <span class="title">{{t 'crosswalk.browser-level.framework'}}</span>
      </div>
      {{crosswalk.app-subject-browser frameworkStack="frameworkStack" disableGenerateBtn="disableGenerateBtn" isShowWarning=enableGenerateTableBtn categoryId=categoryId}}
    </div>
    <div class="generate-table-btn" align="center">
      <button class="btn generate-btn {{unless enableGenerateTableBtn 'disabled'}}" {{action "generateCrosswalkTable"}}>{{t 'crosswalk.generate-table'}}</button>
    </div>
    <div class="crosswalk-table-view">
      {{#if showCrosswalkTable}}
        <div class="crosswalk-table">
          {{crosswalk.app-crosswalk-table categoryId=categoryId subjectTitle=subjectTitle tableData=tableData}}
        </div>
      {{/if}}
    </div>
  </div>
</div>
