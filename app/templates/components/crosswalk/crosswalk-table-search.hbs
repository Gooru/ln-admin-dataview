<div class="crosswalk-table-search">
  {{crosswalk.crosswalk-search-box onSearchCrosswalk="onSearchCrosswalk" selectedFramework=selectedFramework onBackToCrosswalk="onBackToCrosswalk"}}
  <div class="body">
    <div class="body-container">
      <div class="crowalk-result">
        {{#each matchingCrosswalkCodes as |crosswalkCode cardIndex|}}
          <div class="crosswalk-card card-{{cardIndex}}" {{action "onSelectCrosswalk" crosswalkCode cardIndex}}>
            <div class="code">
              {{crosswalkCode.id}}
            </div>
            <div class="description">
              {{crosswalkCode.title}}
            </div>
          </div>
        {{/each}}
      </div>
      {{#if isLoading}}
        {{three-bounce-spinner}}
      {{else}}
        <div class="crosswalk-info">
          {{#if isShowStandardInfo}}
            <div class="standard-info">
              <div class="title">
                Information
              </div>
              <div class="gut-code">
                COMPETENCY: {{GUT}}
              </div>
              <div class="description">
                {{description}}
              </div>
              <div class="content-count">
                {{content-display-count contentCountData=contentCountData}}
              </div>
              <div class="signature-assessments">
                {{signature-collections collections=signatureContents.assessments collectionType='assessment'}}
              </div>
              <div class="signature-collections">
                {{signature-collections collections=signatureContents.collections collectionType='collection'}}
              </div>
            </div>
          {{/if}}

          {{#if isShowContentInfo}}
            <div class="content-info">
              <div class="section-content resources col-sm-12">
                <div class="section-title">{{t 'gcm.pull-out.section.resources'}}</div>
                  {{#each resourceContent as |content|}}
                    <div class="col-md-4 col-sm-12">
                      {{cards.content-card content=content isAddEnabled=false}}
                    </div>
                  {{/each}}
              </div>
              <div class="section-content questions col-sm-12">
                <div class="section-title">Questions</div>
                  {{#each questionContent as |content|}}
                    <div class="col-md-4 col-sm-12">
                      {{cards.content-card content=content isAddEnabled=false}}
                    </div>
                  {{/each}}
              </div>
              <div class="section-content collections col-sm-12">
                <div class="section-title">Collections</div>
                  {{#each collectionContent as |content|}}
                    <div class="col-md-4 col-sm-12">
                      {{cards.content-card content=content isAddEnabled=false}}
                    </div>
                  {{/each}}
              </div>
              <div class="section-content assessments col-sm-12">
                <div class="section-title">Assessments</div>
                  {{#each assessmentContent as |content|}}
                    <div class="col-md-4 col-sm-12">
                      {{cards.content-card content=content isAddEnabled=false}}
                    </div>
                  {{/each}}
              </div>
              <div class="section-content courses col-sm-12">
                <div class="section-title">Courses</div>
                  {{#each courseContent as |content|}}
                    <div class="col-md-4 col-sm-12">
                      {{activity.course-card course=content}}
                    </div>
                  {{/each}}
              </div>
            </div>
          {{/if}}
        </div>
      {{/if}}
    </div>
  </div>
</div>
