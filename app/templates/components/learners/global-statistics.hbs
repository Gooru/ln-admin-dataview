<div class="section-title">
  {{t 'common.globalStatistics'}}
</div>
{{#each subjects as |subject|}}
<div class="active-districts">
  <div class="districs">
    <span class="num-of-count">{{count-format subject.total}}</span>
    <span class="subject-total-count">{{subject.name}}</span>
    <span class="subject-learners">{{t 'common.learners'}}</span>
  </div>
  <div class="active-users">
    <div class="subject-active-count">{{count-format subject.active}} Active Users</div>
  </div>
</div>
{{/each}}
