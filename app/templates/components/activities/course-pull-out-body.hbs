<div>
  <div class="header">
    <div class="author-info">
      <span class="created-by">  {{t "common.created-by" }} </span>
      <img class="img-responsive thumbnail-img" src="{{course.owner.avatarUrl}}">
      <span class="username">{{course.creator.username}}</span>
      <span class="publish-date">on {{format-date course.createdData 'DD MMMM, YYYY'}}</span>
    </div>
  </div>

  <div class="body">
    <div class="course-info">
      <div class="title">
        {{course.title}}
      </div>
      <div class="description">
        <div class="thumbnail-img">
          <img class="img-responsive" src="{{course.thumbnailUrl}}"/>
        </div>
        <div class="content">
          {{course.description}}
        </div>
      </div>
    </div>

    <div class="content-count">
      {{#each contentCount as |content|}}
        <div class="content-info" data-toggle="tooltip" data-html="true" data-placement="top" title="{{content.type}}">
          <div class="{{content.type}}"><i class="icon"></i></div>
          <div class="count">{{content.count}}</div>
        </div>
      {{/each}}
    </div>

    <div class="taxonomy-info">
      <div class="title">
        {{t "activities.pull-out.taxonomy-title"}}
      </div>
      <div class="items">
        <div class="subject item-box">
          {{if course.subjectName course.subjectName 'No Subject Available'}}
        </div>
      </div>
    </div>

    <div class="content-accordion">
      <div class="content-title">
        Content
      </div>
      <div class="content-list">
        {{activities.course-accordion units=courseData.unit_summary courseId=courseData.id}}
      </div>
    </div>
  </div>
</div>
