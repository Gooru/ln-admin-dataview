<div class="comparative-search-container">
  <div class="comaparative-search-header">
      {{activities.comparative-search-box onSearchTerms = "onSearchTerms"}}
  </div>
  <div class="comparative-search-section">
      <div class="comparative-search-engine-list {{unless googleSearchContent.length 'no-search-content' ''}}">
          <div class="engine-logo google-search-engine">

          </div>
          <div class="engine-logo bing-search-engine">

          </div>
          <div class="engine-logo gooru-search-engine">

          </div>
      </div>
      <div class="comparative-search-content {{unless gooruSearchContent.maxTotalHitCount 'no-search-content' ''}}">
        {{#if gooruSearchContent.maxTotalHitCount}}
          {{activities.comparative-search-card paginateNext="paginateNext" searchContent = googleSearchContent}}
          {{activities.comparative-search-card paginateNext="paginateNext" searchContent = bingSearchContent}}
          {{activities.comparative-gooru-search-card paginateNext="paginateNext" activityContents = gooruSearchContent}}
        {{else}}
          <div class="no-content">
              Type in some keywords to see the results from different platforms.
          </div>
        {{/if}}
      </div>
  </div>
</div>
