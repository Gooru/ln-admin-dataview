  <div class="row">
    <ul class="nav nav-tabs" role="tablist">
      {{#each menuItems as |item index|}}
      {{#if (has-access 'menu' item)}}
        <li role="presentation" class="{{if (eq index activeMenuIndex) "active"}}">
          <a href="#{{item}}" aria-controls="{{item}}" role="tab" data-toggle="tab" {{action "onMenuItemSelection" item}}>{{item}}</a>
        </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
