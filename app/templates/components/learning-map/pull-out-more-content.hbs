<div class="pull-out-more-content">
  {{#if (eq type 'course')}}
    <div class="content-section {{type}} col-sm-12">
      <div class="section-title">Courses</div>
      <div class="section-content">
        {{#each contents as |content|}}
          <div class="col-md-4 col-sm-12">
            {{activity.course-card course=content}}
          </div>
        {{else}}
          No course found
        {{/each}}
      </div>
    </div>
  {{/if}}

