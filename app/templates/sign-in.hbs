<div class="controller sign-in">
  <div class="sign-in-wrapper col-md-12 col-sm-12 col-xs-12">
    <div class="sign-in-header">
      <h1>{{t "signIn.title"}}</h1>
    </div>
    <div class="divider"></div>
    <div class="sign-in-form">
      <form>
        <div class="form-group username">
          <label for="usernameId">
            <span>{{t "signIn.usernameOrEmail"}}</span>
            {{validation.app-input model=user valuePath='username' didValidate=didValidate inputId='usernameId'}}
          </label>
        </div>
        <div class="form-group">
          <label for="passwordId">
            <span>{{t "signIn.password"}}</span>
            {{validation.app-input model=user valuePath='password' type='password' didValidate=didValidate inputId='passwordId'}}
          </label>
        </div>
        <div class="log-in-button form-group text-center">
          <button class="btn btn-success submit-sign-in" {{action "signIn"}}>{{t "signIn.logIn"}} <span>{{app-icon name='keyboard_arrow_right'}}</span></button>
        </div>
      </form>
    </div>
  </div>
</div>
